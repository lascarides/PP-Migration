%table.table
	%thead
		%tr
			%th.col-md-6 Item
			%th.col-md-3 Publication
			%th.col-md-3 Date
	%tbody
		- @search_results['search']['results'].each do |result|
			%tr
				%td
					%a{:href => "/#{@type}/#{result['id']}"}
						= result['title']
				%td= result['collection'].first
				%td
					- if result['date'].blank?
						= 'Date unknown'
					- else
						= Date.parse(result['date'].to_a[0]).strftime("%e %B, %Y")



