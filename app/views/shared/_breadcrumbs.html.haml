%span.breadcrumbs
	- if not @item[:collection].nil?
		- url = "/#{@type}/title/#{@item[:collection].parameterize}"
		= link_to_unless_current @item[:collection], url

		- if not @item[:date_year].nil?
			%span.breadcrumb-separator »
			- url += "/#{@item[:date_year]}"
			= link_to_unless_current @item[:date_year], url
		- if not @item[:parliamentary_session].nil?
			%span.breadcrumb-separator »
			- url += "/#{@item[:parliamentary_session].parameterize}"
			= link_to_unless_current @item[:parliamentary_session], url

		- if not @item[:date_day].nil? and not @item[:date_month].nil?
			%span.breadcrumb-separator »
			- url += "/#{@item[:date_month]}/#{@item[:date_day]}"
			= link_to_unless_current "#{@item[:date].strftime("%B")} #{@item[:date_day].to_i}", url
		- if not @item[:page_number].nil?
			%span.breadcrumb-separator »
			- url += "/#{@item[:page_number]}"
			= link_to_unless_current "Page #{@item[:page_number]}", url
			- if not @item[:original].nil?
				%span.breadcrumb-separator »

