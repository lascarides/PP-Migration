%h4= render :partial => 'shared/breadcrumbs'

%h1= @item[:title]

.item
	.row
		.col-md-9

			%nav.navbar.navbar-default.navbar-subnav
				%ul.nav.navbar-nav
					%li.active
						%a{href: "#images", 'data-toggle' => "tab"}
							%span.glyphicon.glyphicon-th
							Scanned page image

					%li
						%a{href: "#fulltext", 'data-toggle' => "tab"}
							%span.glyphicon.glyphicon-list-alt
							Computer-generated text
					%li.dropdown
						%a.dropdown-toggle{href: "#", 'data-toggle' => "dropdown"}
							%span.glyphicon.glyphicon-file
							Save a copy 
							%span.caret
						%ul.dropdown-menu{role: "menu"}
							%li= link_to 'Download PDF', '#'
							%li= link_to 'Download plain text'
							%li= link_to 'Download high quality image'

			.tab-content
				#images.tab-pane.fade.in.active
					.row
						.col-md-12
							.image-pad
								- @item[:images].each do |image|
									= image_tag image

							.well
								%small 
									= "This article has been automatically clipped from the #{@item[:collection]}, organised into a single column, then optimised for display on your computer screen. As a result, it may not look exactly as it did on the original page. The article can be seen in its original form in the page view."

				#fulltext.tab-pane.fade
					.row
						.col-md-6.col-md-offset-3
							=raw @item[:fulltext]



		.col-md-3
			
			= render :partial => 'shared/copyright_template'

			%p= link_to 'â€¦', @item[:original]


			%h4= "About this #{@type.to_s.singularize}" 

			%p [Description goes here...]

			%p= link_to "Read more", "/#{@type}/title/#{@item[:collection].parameterize}"
