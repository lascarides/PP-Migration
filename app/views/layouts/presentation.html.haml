!!!
%html{:lang => 'en'}
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => content_for?(:description) ? yield(:description) : "Papers Past", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)

    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "Papers Past"

  %body{:class => "pres"}
    = yield
